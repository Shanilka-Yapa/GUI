<Window x:Class="EstateEase.Welcome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EstateEase"
        mc:Ignorable="d"
        Title="Welcome" Height="450" Width="800">
    <Grid
        Background="#FF08293A">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Image 
            Grid.Column="1"
            Grid.RowSpan="3"
            Stretch="UniformToFill"
            Opacity="0.2"
            Source="Images/welcome.jpeg"/>
        <Rectangle
            Grid.Column="1"
            Fill="Black"
            Opacity="0.5"
            Grid.RowSpan="3" Margin="10,0,0,0"
            >
            
        </Rectangle>
        <Image
            Grid.Column="1"
            Grid.Row="0"
            Opacity="0.8"
            VerticalAlignment="Top"
            Source="Images/namelogo.png"/>

        <StackPanel
            Grid.Column="1"
            Grid.RowSpan="7"
            >
            <TextBlock
                Foreground="LightBlue"
                TextWrapping="Wrap"
                HorizontalAlignment="Center"
                TextAlignment="Center"
                Margin="0 130 0 0"
                FontSize="40" 
                Height="58" 
                FontFamily="Franklin Gothic Book"
                >
               "Welcome to EstateEase!
                "
            </TextBlock>
            <TextBlock
                Foreground="AliceBlue"
                TextWrapping="Wrap"
                HorizontalAlignment="Center"
                TextAlignment="Center"
                Margin="0 10 0 0"
                FontSize="35" 
                Height="100" 
                FontFamily="Global User Interface"
                >
               "Simplifying Real Estate Management with ease"
    "
            </TextBlock>
        </StackPanel>
        <Button
            Style="{StaticResource RoundButtonStyle}"
            Width="230"
            Height="60"
            VerticalAlignment="Center"
            Grid.Column="0"
            Background="#FF58CFF1"
            Foreground="Black"
            FontSize="35"
            FontWeight="Bold"
            Click="View_Dashboard" Margin="35,0,35,0"
            >Dashboard
        </Button>
        <Button 
            Style="{StaticResource RoundButtonStyle}"
            Width="230"
            Height="60"
            VerticalAlignment="Center"
            Grid.Column="0"
            Grid.Row="1"
            Background="#FF58CFF1"
            Foreground="Black"
            FontSize="35"
            FontWeight="Bold"
            Margin="22,0,22,0"
            Click="View_Properties"
            >Properties
        </Button>
        <Button 
            Style="{StaticResource RoundButtonStyle}"
            Width="230"
            Height="60"
            VerticalAlignment="Center"
            Grid.Column="0"
            Grid.Row="2"
            Background="#FF58CFF1"
            Foreground="Black"
            FontSize="35"
            FontWeight="Bold"
            Click="Maintenance_add"
            >Maintenance
        </Button>
    </Grid>

</Window>
