<Window x:Class="EstateEase.Welcome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EstateEase"
        mc:Ignorable="d"
        Title="Welcome" Height="450" Width="800">
    <Grid
        Background="Black">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image 
            Source="Images/welcome.jpeg"
            Stretch="UniformToFill"
            VerticalAlignment="Center"
            Opacity="0.55" 
            Grid.ColumnSpan="2"
            Grid.RowSpan="7"
        />
        <Rectangle
            Grid.Column="1"
            Fill="Black"
            Opacity="0.8"
            Grid.RowSpan="7"
            >
        </Rectangle>

        <StackPanel
            Grid.Column="1"
            Grid.RowSpan="7"
            >
            <TextBlock
                Foreground="AliceBlue"
                TextWrapping="Wrap"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                TextAlignment="Center"
                Margin="0 100 0 0"
                FontSize="40"
                >
               "Welcome to EstateEase!<LineBreak/>
                Simplifying Real Estate Management with Ease."
            </TextBlock>
        </StackPanel>
        
        <TextBlock
                Grid.Column="0"
                Grid.Row="0"
                Foreground="AliceBlue"
                HorizontalAlignment="Center"
                FontStretch="Expanded" 
                Width="318" 
                TextAlignment="Center"
                FontSize="25"
                FontWeight="DemiBold"
                >
                Welcome to EstateEase
         </TextBlock>
        <Button
                Grid.Column="0"
                Grid.Row="1"
                Background="Transparent"
                Foreground="Black"
                FontSize="35"
                FontWeight="ExtraBlack"
            >Dashboard
         </Button>
        <Button
                Grid.Column="0"
                Grid.Row="2"
                Background="Transparent"
                Foreground="Black"
                FontSize="35"
                FontWeight="ExtraBlack"
            >Properties
        </Button>
        <Button
                Grid.Column="0"
                Grid.Row="3"
                Background="Transparent"
                Foreground="Black"
                FontSize="35"
                FontWeight="ExtraBlack"
            >Tenants
        </Button>
        <Button
                Grid.Column="0"
                Grid.Row="4"
                Background="Transparent"
                Foreground="Black"
                FontSize="35"
                FontWeight="ExtraBlack"
            >Payments
        </Button>
        <Button
                Grid.Column="0"
                Grid.Row="5"
                Background="Transparent"
                Foreground="Black"
                FontSize="35"
                FontWeight="ExtraBlack"
                Click="Maintenance_add"
            >Maintenance
        </Button>
        <Button
                Grid.Column="0"
                Grid.Row="6"
                Background="Transparent"
                Foreground="Black"
                FontSize="35"
                FontWeight="ExtraBlack"
            >Settings
        </Button>
    </Grid>

</Window>
