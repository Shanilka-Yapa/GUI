<Window x:Class="EstateEase.Loginwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EstateEase"
        mc:Ignorable="d"
        Title="Loginwindow" Height="450" Width="800">
    <Grid>
        <Image Source="Images/house7.jpg"
               Stretch="UniformToFill"
               VerticalAlignment="Center"
               />
        <Rectangle Width="450" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Stretch"
                   Fill="Black"
                   Opacity="0.85">
        
        </Rectangle>
        <StackPanel>
        <TextBlock
            Text="EstateEase"
            FontSize="50"
            HorizontalAlignment="Center"
            Foreground="White"
            FontWeight="DemiBold"
            Margin="10, 20, 0, 0"
        />
        </StackPanel>
        <StackPanel Grid.Column="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    Margin="150 20 0 0"
        >
            <TextBlock
            Text="Username"
            FontSize="25"
            HorizontalAlignment="Left"
            Foreground="AliceBlue"
            Margin="50, 10, 0, 20"/>
            <TextBlock
            Text="Email"
            FontSize="25"
            HorizontalAlignment="Left"
            Foreground="AliceBlue"
            Margin="50, 10, 0, 20"/>
            <TextBlock
            Text="Password"
            FontSize="25"
            HorizontalAlignment="Left"
            Foreground="AliceBlue"
            Margin="50, 10, 0, 20"/>
        </StackPanel>

        <StackPanel Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    Margin="0 30 180 0"
        >
            <TextBox
                BorderBrush="LightBlue"
                Background="Transparent"
                Width="250"
                Height="45"
                FontSize="25"
                HorizontalAlignment="Left"
                Foreground="AliceBlue"
                Margin="25 10 25 20"/>
            <TextBox
                BorderBrush="LightBlue"
                Background="Transparent"
                Width="250"
                Height="45"
                FontSize="25"
                HorizontalAlignment="Left"
                Foreground="AliceBlue"
                Margin="25 10 25 20"/>
            <PasswordBox
                BorderBrush="LightBlue"
                Background="Transparent"
                Width="250"
                Height="45"
                FontSize="25"
                HorizontalAlignment="Left"
                Foreground="AliceBlue"
                Margin="25 10 25 20"/>
        </StackPanel>
        <StackPanel
            Margin="0 340 0 0"
            >
            <Button
                Style="{StaticResource RoundButtonStyle}"
                Foreground="AliceBlue"
                Background="Black"
                Content="Log in"
                Width="163"
                Height="59"
                Margin="20 0 0 10"
                FontSize="25"
                Click="Log_in"/>
        </StackPanel>
    </Grid>
</Window>
