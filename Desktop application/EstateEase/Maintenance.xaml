<Window x:Class="EstateEase.Maintenance"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EstateEase"
        mc:Ignorable="d"
        Title="Maintenance" Height="450" Width="800">
    <Grid
        Background="Black"
        >

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image
            Stretch="UniformToFill"
            Opacity=" 0.2"
            Grid.ColumnSpan="2"
            Grid.RowSpan="3"
            Source="Images/maintenanceimage.jpg"/>

        <TextBlock 
            Grid.Row="0" 
            Grid.Column="0" 
            Grid.ColumnSpan="2"  
            HorizontalAlignment="Center"
            FontWeight="Bold"
            FontSize="30" 
            Text="Maintenance"
            Foreground="LightBlue"
            Margin="0 10"
        />
        <StackPanel 
            Grid.Row="1" Grid.Column="1"
            VerticalAlignment="Center">
            <Button 
                Style="{StaticResource RoundButtonStyle}"
                Height="50"
                FontSize="20" 
                Padding="5" 
                Margin="5" 
                Width="170"
                Background="#FF56CAF1"
                Foreground="#FF08293A"
                FontWeight="Bold"
                Click="Add_Maintenance"
            >Add</Button>
            <Button 
                Style="{StaticResource RoundButtonStyle}"
                Height="50"
                Width="170"
                FontSize="20" 
                Padding="5" 
                Margin="5" 
                Background="#FF56CAF1"
                Foreground="#FF08293A"
                FontWeight="Bold"
                Click="Update_Maintenance"
             >Update</Button>
            <Button 
                Style="{StaticResource RoundButtonStyle}"
                Height="50"
                Width="170"
                FontSize="20" 
                Padding="5" 
                Margin="5" 
                Background="#FF56CAF1"
                Foreground="#FF08293A"
                FontWeight="Bold"
                Click="Delete_Maintenance">Delete</Button>
            <Button 
                Style="{StaticResource RoundButtonStyle}"
                Height="50"
                Width="170"
                FontSize="20" 
                Padding="5" 
                Margin="5" 
                Background="#FF56CAF1"
                Foreground="#FF08293A"
                FontWeight="Bold"
                Click="Back_Button">Back</Button>
        </StackPanel>
        <DataGrid 
            Grid.Row="1"
            Background="AliceBlue"
            Foreground="Black"
            FontWeight="Bold"
            Grid.Column="0"
            x:Name="InfoGrid"
            AutoGenerateColumns="True"
            Margin="10"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"/>

    </Grid>
    
</Window>
