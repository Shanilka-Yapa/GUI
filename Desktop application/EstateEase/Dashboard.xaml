<Window x:Class="EstateEase.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EstateEase"
        mc:Ignorable="d"
        Title="Dashboard" Height="450" Width="800">
    <Grid
        Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Image
            Source="Images/dashboard.jpg"
            Opacity="0.7"
            Grid.ColumnSpan="2"
            Grid.RowSpan="4"/>

        <Button     Style="{StaticResource RoundButtonStyle}"
                    Height="NaN"
                    Width="170"
                    Grid.Column="0"
                    Grid.Row="0"
                    Background="#FF0E172F"
                    Foreground="LightBlue"
                    FontWeight="Bold"
                    FontSize="30"
                    
                    BorderBrush="LightBlue"
                    Click="Back_Button" Margin="65,29,65,10"
                    >Back</Button>

        <Button Content="Show Total Properties" 
                Style="{StaticResource RoundButtonStyle}"    
                Click="Show_TotalProperties" 
                    Background="LightBlue"
                    Foreground="DarkBlue"
                    FontWeight="Bold"
                    FontSize="18"
                    Grid.Column="0"
                    Grid.Row="1"
                    Width="200" Height="63" 
                    VerticalAlignment="Center" Margin="50,0,50,0"/>
        <TextBlock Grid.Column="1"
                       Grid.Row="1"
                       x:Name="TotalPropertiesText" 
                       FontSize="20" 
                       Foreground="LightBlue" Text="-" 
                       VerticalAlignment="Center" Height="63"/>
        <Button Grid.Column="0"
                Style="{StaticResource RoundButtonStyle}"    
                Grid.Row="2"
                    Content="Show Total Tenants" 
                    Click="Show_TotalTenants" 
                    Background="LightBlue"
                    Foreground="DarkBlue"
                    FontSize="18"
                    FontWeight="Bold"
                    Width="200" Height="63" 
                    VerticalAlignment="Center"/>
        <TextBlock Grid.Column="1"
                       Grid.Row="2"
                       x:Name="TotalTenantsText" 
                       FontSize="20" 
                       Foreground="LightBlue" Text="-" 
                       VerticalAlignment="Center" Height="63"/>
        <Button Grid.Column="0"
                Style="{StaticResource RoundButtonStyle}"    
                Grid.Row="3"
                    Content="Contacts" 
                    Click="Show_Contacts" 
                    Background="LightBlue"
                    Foreground="DarkBlue"
                    FontWeight="Bold"
                    FontSize="20"
                    Width="200" Height="63" 
                    VerticalAlignment="Center"/>
        <TextBlock Grid.Column="1"
                       Grid.Row="3"
                       x:Name="ContactsText" 
                       FontSize="20" 
                       Foreground="LightBlue" Text="-" 
                       VerticalAlignment="Center" Height="50"/>



    </Grid>
</Window>
