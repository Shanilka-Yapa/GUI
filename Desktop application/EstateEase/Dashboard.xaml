<Window x:Class="EstateEase.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EstateEase"
        mc:Ignorable="d"
        Title="Dashboard" Height="450" Width="800">
    <Grid
        Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Image
            Source="Images/Logo1.jpeg"
            Opacity="0.2"
            Grid.ColumnSpan="2"
            Grid.RowSpan="4"/>

        <Button     
            Style="{StaticResource RoundButtonStyle}"
            Height="NaN"
            Width="130"
            Grid.Column="0"
            Grid.Row="0"
            Foreground="#FF08293A"
            Background="LightBlue"
            FontWeight="Bold"
            FontSize="30"
            Click="Back_Button" 
            Margin="65,29,65,10"
        >Back</Button>

        <Button 
            Content="Show Total Properties" 
            Style="{StaticResource RoundButtonStyle}"    
            Click="Show_TotalProperties" 
            Background="LightBlue"
            Foreground="#FF08293A"
            FontWeight="Bold"
            FontSize="18"
            Grid.Column="0"
            Grid.Row="1"
            Width="200" 
            Height="63"
            HorizontalAlignment="Left"
            VerticalAlignment="Center" 
            Margin="20,0,0,0"/>
        <TextBlock 
            Grid.Column="1"
            Grid.Row="1"
            x:Name="TotalPropertiesText" 
            FontSize="20" 
            Foreground="LightBlue" 
            Text="-" 
            HorizontalAlignment="Left"
            VerticalAlignment="Center" 
            Height="63" 
            Margin="40,0,0,0" 
            Width="431"/>
        <Button 
            Grid.Column="0"
            Style="{StaticResource RoundButtonStyle}"    
            Grid.Row="2"
            Content="Show Total Tenants" 
            Click="Show_TotalTenants" 
            Background="LightBlue"
            Foreground="#FF08293A"
            FontSize="18"
            FontWeight="Bold"
            Width="200" 
            Height="63"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="20,0,0,0"/>
        <TextBlock 
            Grid.Column="1"
            Grid.Row="2"
            x:Name="TotalTenantsText" 
            FontSize="20" 
            Foreground="LightBlue" 
            Text="-" 
            VerticalAlignment="Center" 
            Height="63" 
            Margin="40,0,0,0"/>
        <Button 
            Grid.Column="0"
            Style="{StaticResource RoundButtonStyle}"    
            Grid.Row="3"
            Content="Contacts" 
            Click="Show_Contacts" 
            Background="LightBlue"
            Foreground="#FF08293A"
            FontWeight="Bold"
            FontSize="20"
            Width="200" 
            Height="63"
            HorizontalAlignment="Left"
            Margin="20,0,0,0"
            VerticalAlignment="Center"/>
        <TextBlock 
            Grid.Column="1"
            Grid.Row="3"
            x:Name="ContactsText" 
            FontSize="20" 
            Foreground="LightBlue"
            Text="-" 
            VerticalAlignment="Center" 
            Height="50" 
            Margin="40,0,0,0"/>

    </Grid>
</Window>
