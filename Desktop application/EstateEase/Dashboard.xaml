<Window x:Class="EstateEase.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EstateEase"
        mc:Ignorable="d"
        Title="Dashboard" Height="450" Width="800">
    <Grid
        Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Image
            Source="Images/dashboard.jpg"
            Opacity="0.7"
            Grid.ColumnSpan="2"/>
        <StackPanel Grid.Column="0">
            <Button Grid.Column="0"
                    Background="Transparent"
                    Foreground="LightBlue"
                    FontWeight="Bold"
                    FontSize="30"
                    BorderBrush="LightBlue"
                    >Back</Button>
            <TextBlock Text="Total Properties: " 
                       FontSize="25" 
                       Foreground="LightBlue"/>
            <Button Content="Show Total Properties" 
                    Click="Show_TotalProperties" 
                    Background="LightBlue"
                    Foreground="DarkBlue"
                    FontSize="18"
                    
                    Width="200" Height="40" Margin="10"/>
            <TextBlock x:Name="TotalPropertiesText" 
                       FontSize="20" 
                       Foreground="LightBlue" Text="-" />

        </StackPanel>

    </Grid>
</Window>
