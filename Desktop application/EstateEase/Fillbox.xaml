<Window x:Class="EstateEase.Fillbox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EstateEase"
        mc:Ignorable="d"
        Title="Fillbox" Height="450" Width="800">
    <Grid
        Background="Black">

        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Image
            Source="Images/maintenanceimage.jpg"
            Stretch="Fill"
            Grid.ColumnSpan="2"
            Grid.RowSpan="5"
            Opacity="0.2"
            />
        <TextBlock 
            Grid.Row="0"
            Grid.Column="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontWeight="Bold"
            FontSize="30"
            Foreground="LightBlue"
            TextAlignment="Left"
            Text="Property ID"/>
        <TextBox
            CaretBrush="AliceBlue"
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            Height="50px"
            Padding="5"
            FontSize="20"
            x:Name="HouseIDBox"
            Background="Transparent"
            Foreground="AliceBlue"/>
        <TextBlock 
            Grid.Row="1"
            Grid.Column="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontWeight="Bold"
            FontSize="30"
            Foreground="LightBlue"
            TextAlignment="Left"
            Text="Name"/>
        <TextBox 
            CaretBrush="AliceBlue"
            Grid.Row="1"
            Grid.Column="1"
            Margin="5"
            Height="50px"
            Padding="5"
            FontSize="20"
            x:Name="NameBox"
            Background="Transparent"
            Foreground="AliceBlue"/>
        <TextBlock 
            Grid.Row="2"
            Grid.Column="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontWeight="Bold"
            FontSize="30"
            Foreground="LightBlue"
            TextAlignment="Left"
            Text="Date"/>
        <TextBox 
            CaretBrush="AliceBlue"
            Grid.Row="2"
            Grid.Column="1"
            Margin="5"
            Height="50px"
            Padding="5"
            FontSize="20"
            x:Name="DateBox"
            Background="Transparent"
            Foreground="AliceBlue"/>
        <TextBlock 
            Grid.Row="3"
            Grid.Column="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontWeight="Bold"
            FontSize="30"
            Foreground="LightBlue"
            TextAlignment="Left"
            Text="Issue"/>
        <TextBox
            CaretBrush="AliceBlue"
            Grid.Row="3"
            Grid.Column="1"
            Margin="5"
            Height="50px"
            Padding="5"
            FontSize="10"
            x:Name="IssueBox"
            Background="Transparent"
            Foreground="AliceBlue"/>
        <StackPanel 
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <Button 
                Style="{StaticResource RoundButtonStyle}"
                Content="Save"
                Width="110"
                Height="50"
                Margin="20 5"
                FontSize="25"
                Background="LightBlue"
                Foreground="DarkBlue"
                FontWeight="Bold"
                Click="Save_Issue"/>
            <Button 
                Style="{StaticResource RoundButtonStyle}"
                Content="Cancel"
                Width="110"
                Height="50"
                Margin="20 5"
                FontSize="25"
                Background="LightBlue"
                Foreground="DarkBlue"
                FontWeight="Bold"
                Click="Cancel_issue"/>
            <Button 
                Style="{StaticResource RoundButtonStyle}"
                Content="Clear"
                Width="110"
                Height="50"
                Margin="20 5"
                FontSize="25"
                Background="LightBlue"
                Foreground="DarkBlue"
                FontWeight="Bold"
                Click="Clear_issue"/>
        </StackPanel>
    </Grid>
</Window>
